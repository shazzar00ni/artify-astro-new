---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Community from "../components/Community.astro";
import Profile from "../components/Profile.astro";
import Newsletter from "../components/Newsletter.astro";
import Footer from "../components/Footer.astro";

const heroData = {
  title: "Artify-AI: Innovate. Create. Inspire.",
  subtitle: "Experience the power of AI with Artify-AI.",
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Artify-AI: Innovate. Create. Inspire.</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" />
  </head>
  <body>
    <Header />
    <Hero title={heroData.title} subtitle={heroData.subtitle} />
    <Features />
    <Community />
    <Profile />
    <Newsletter />
    <Footer />

    <script>
      const toggle = document.getElementById("theme-toggle");
      toggle.addEventListener("click", () => {
        document.body.classList.toggle("dark-mode");
        localStorage.setItem("theme", document.body.classList.contains("dark-mode") ? "dark" : "light");
      });
      if (localStorage.getItem("theme") === "dark") document.body.classList.add("dark-mode");

      document.querySelectorAll("nav a").forEach(anchor => {
        anchor.addEventListener("click", (e) => {
          e.preventDefault();
          const href = anchor.getAttribute("href");
          if (href.startsWith("#")) {
            document.querySelector(href).scrollIntoView({ behavior: "smooth" });
          } else {
            window.location.href = href;
          }
        });
      });
    </script>
  </body>
</html>

<style>
  body {
    font-family: "Poppins", sans-serif;
    transition: background 0.3s, color 0.3s;
  }
  body.dark-mode {
    background: #1f2937;
    color: #e5e7eb;
  }
</style>